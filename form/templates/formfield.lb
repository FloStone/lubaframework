<if $type=="hidden">
    $$field
<else>
    <div class="fieldrow
        <if $type=="submit">
        actions
        </if>
    ">
        <if $error>
            <div class="form-error" style="color:red">
                $$error
            </div>
        </if>
        $$label
        <div class="field">
           $$field
        </div>
    </div>
</if>
